<Page
    x:Class="Launcher.Views.LoginPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attachedProperties="clr-namespace:Launcher.AttachedProperties"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    attachedProperties:ApplicationNavigation.HistoryEnabled="False"
    d:DesignHeight="500"
    d:DesignWidth="1000"
    Background="{DynamicResource ConnectionPageBackgroundBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=LoginPageViewModel}"
    mc:Ignorable="d">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding ViewLoadedCommand}" />
        </b:EventTrigger>
        <b:EventTrigger EventName="Unloaded">
            <b:InvokeCommandAction Command="{Binding ViewUnloadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="26"
                FontWeight="Bold"
                Foreground="{DynamicResource MainTitleForegroundBrush}"
                Text="{DynamicResource connectionPageView_MainTitleLabel}" />
            <TextBlock
                Margin="0,7,0,0"
                HorizontalAlignment="Center"
                FontSize="18"
                Foreground="{DynamicResource SloganForegroundBrush}"
                Text="{DynamicResource connectionPageView_SloganLabel}"
                TextAlignment="Center" />

            <StackPanel
                Height="35"
                Margin="0,40,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,15,0"
                    Command="{Binding RunClientCommand}"
                    Content="{DynamicResource connectionPageView_RunZClientButtonLabel}"
                    FontSize="{StaticResource LoginButtonsFontSize}"
                    Style="{DynamicResource LoginButtonStyleDefault}" />
                <Button
                    Width="200"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Command="{Binding ConnectCommand}"
                    IsEnabled="True"
                    Style="{DynamicResource LoginButtonStylePrimary}">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="{StaticResource LoginButtonsFontSize}"
                                FontWeight="Medium"
                                Text="{DynamicResource connectionPageView_ConnectButtonLabel}" />
                            <Glyphs
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Fill="{DynamicResource LoginButtonForegroundBrushPrimary}"
                                FontRenderingEmSize="16"
                                FontUri="pack://application:,,,/Launcher.Resources;Component/Fonts/ionicons.ttf"
                                UnicodeString="" />
                        </Grid>
                    </Button.Content>
                </Button>
            </StackPanel>

            <TextBlock
                Margin="0,45"
                FontWeight="Light"
                Foreground="{DynamicResource CantConnectForegroundBrush}"
                Text="{DynamicResource connectionPageView_CantConnectLabel}"
                TextAlignment="Center"
                Visibility="{Binding IsConnectionFailed, Converter={StaticResource Bool2VisibilityConverterUsingHidden}}" />
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,10"
            HorizontalAlignment="Center">
            <Hyperlink Command="{Binding OpenEmuStatusCommand}" Style="{DynamicResource LoginPageHyperlinkStyle}">
                Emu status?
            </Hyperlink>
            <Hyperlink Command="{Binding OpenContactDeveloperCommand}" Style="{DynamicResource LoginPageHyperlinkStyle}">
                Contact developer
            </Hyperlink>
        </TextBlock>
    </Grid>
</Page>
