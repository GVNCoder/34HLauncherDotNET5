<UserControl
    x:Class="Launcher.Views.WindowContentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="535"
    d:DesignWidth="1000"
    DataContext="{Binding Source={StaticResource Locator}, Path=WindowContentViewModel}"
    mc:Ignorable="d">

    <Grid>
        <!--  Content Background  -->
        <Image Source="{DynamicResource BackgroundImage}" Stretch="Fill" />
        <Rectangle Fill="{DynamicResource WindowBackgroundBrush}" OpacityMask="{DynamicResource WindowBackgroundGradientOpacityMaskBrush}" />

        <!--  Content Host  -->
        <Frame Content="{Binding CurrentContent}" />
    </Grid>
</UserControl>
