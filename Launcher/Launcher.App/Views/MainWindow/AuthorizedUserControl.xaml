<UserControl
    x:Class="Launcher.Views.AuthorizedUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="{StaticResource NavigationPanelHeight}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  TODO: User name binding need to set TargetNullValue as Localized string  -->
        <TextBlock
            Grid.Column="0"
            VerticalAlignment="Center"
            Foreground="{DynamicResource UserNameForegroundBrush}"
            Text="ZLO User Name" />


        <Rectangle
            Grid.Column="2"
            Width="{StaticResource NavigationPanelItemWidth}"
            Height="{StaticResource NavigationPanelItemHeight}"
            Fill="{DynamicResource NavigationButtonBackgroundBrush}"
            RadiusX="{StaticResource NavigationPanelItemCornerRadiusX}"
            RadiusY="{StaticResource NavigationPanelItemCornerRadiusY}" />

        <!--  TODO: Create a separate control to draw icon glyphs  -->
        <!--<TextBlock
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="{StaticResource IconsFont}"
            FontSize="18"
            Foreground="{DynamicResource NavigationButtonForegroundBrush}"
            Text=""
            TextOptions.TextRenderingMode="Aliased"
            Visibility="Hidden" />-->

        <Glyphs
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Fill="{DynamicResource NavigationButtonForegroundBrush}"
            FontRenderingEmSize="18"
            FontUri="pack://application:,,,/Launcher.Resources;Component/Fonts/ionicons.ttf"
            UnicodeString="" />
    </Grid>
</UserControl>
