    <Style x:Key="NavigationButtonStyleBase" TargetType="{x:Type Button}">
        <Setter Property="FontFamily" Value="{StaticResource IconsFont}" />
        <Setter Property="Width" Value="{StaticResource NavigationPanelItemWidth}" />
        <Setter Property="Height" Value="{StaticResource NavigationPanelItemHeight}" />
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource NavigationButtonBackgroundColor}" />
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource NavigationButtonForegroundColor}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border
                        x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="10">
                        <TextBlock
                            x:Name="PART_IconGlyph"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{TemplateBinding FontFamily}"
                            FontSize="{TemplateBinding FontSize}"
                            FontWeight="{TemplateBinding FontWeight}"
                            Foreground="{TemplateBinding Foreground}"
                            Text="{TemplateBinding Content}"
                            TextOptions.TextRenderingMode="Aliased" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="PART_IconGlyph"
                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                            To="White"
                                            Duration="{StaticResource NavigationButtonMouseOverHoverAnimationDuration}">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="{StaticResource NavigationButtonMouseOverHoverAnimationEasingFunction}" />
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="PART_IconGlyph"
                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                            To="{StaticResource NavigationButtonForegroundColor}"
                                            Duration="{StaticResource NavigationButtonMouseOverAnimationDuration}">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="{StaticResource NavigationButtonMouseOverAnimationEasingFunction}" />
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_IconGlyph" Property="Visibility" Value="Hidden" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

